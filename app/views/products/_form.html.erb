<%= form_for(  @product , :html => { :class => "form-horizontal" } ) do |f| %>
  <% if @product.errors.any? %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">&#215;</a>
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label', :for => 'input_title' %>
    <div class="controls">
      <%= f.text_field :title, :id => 'input_title', :placeholder => 'Title' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label', :for => 'input_description' %>
    <div class="controls">
      <%= f.text_area :description, :id => 'input_description', :placeholder => 'Description', rows: 6 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_url, 'Image URL', :class => 'control-label', :for => 'input_image_url' %>
    <div class="controls">
      <%= f.text_field :image_url, :id => 'input_image_url', :placeholder => 'Image URL' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label', :for => 'input_price' %>
    <div class="controls">
      <%= f.text_field :price, :id => 'input_price', :placeholder => 'Price' %>
    </div>
  </div>
  <div class="control-group">
      <div class="controls">
      <%= f.button :class => 'btn' %>
    </div>
  </div>

<% end %>
